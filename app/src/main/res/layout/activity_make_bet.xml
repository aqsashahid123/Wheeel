<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiant"
    android:orientation="vertical"
    tools:context=".Views.Activities.MakeBet">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:gravity="center"
        android:text="Make a BET"
        android:textColor="@color/colorDarkPurple"
        android:textSize="@dimen/textsize_30"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_20"
        android:text="Last Lucky Draw Number"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textsize_15"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llLuckyNum"
        android:gravity="center"
        android:layout_below="@+id/llData"
        android:orientation="horizontal">
        <TextView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_lucky_num"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="@dimen/margin_5"
            android:textColor="#00B95A"
            android:textSize="@dimen/textsize_20" />
        <TextView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_lucky_num"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="4"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="@dimen/margin_5"
            android:textColor="#00B95A"
            android:textSize="@dimen/textsize_20" />
        <TextView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_lucky_num"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="6"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="@dimen/margin_5"
            android:textColor="#00B95A"
            android:textSize="@dimen/textsize_20" />
        <TextView

            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_lucky_num"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:text="3"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="@dimen/margin_5"
            android:textColor="#00B95A"
            android:textSize="@dimen/textsize_20" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>
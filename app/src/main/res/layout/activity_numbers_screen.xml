<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".Views.Activities.ActivityNumbersScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:gravity="center"
            android:text="SELECT NO. TO BET"
            android:textColor="@color/colorDarkPurple"
            android:textSize="@dimen/textsize_20"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_30"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_weight="1"
                android:gravity="right"
                android:text="12345"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_weight="1"
                android:text="1234 $"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize_20" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginRight="@dimen/margin_20"
            android:layout_marginTop="@dimen/margin_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Game Id"
                android:textColor="@color/colorWhite" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_weight="1"
                android:text="Total Balance"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/margin_20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:elevation="4dp"
                android:gravity="center|top"
                android:text="00:"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/margin_25"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:elevation="4dp"
                android:gravity="center|top"
                android:text="H"
                android:textColor="@color/colorYellow"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="4dp"

                android:gravity="center|top"
                android:text="34:"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/margin_25"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:elevation="4dp"
                android:gravity="center|top"
                android:text="M"
                android:textColor="@color/colorYellow"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvTimer"
                android:elevation="4dp"
                android:gravity="center|top"
                android:text="24:"
                android:textColor="@color/colorYellow"
                android:textSize="@dimen/margin_25"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:elevation="4dp"
                android:gravity="center|top"
                android:text="S"
                android:textColor="@color/colorYellow"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="2"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="3"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="4"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv5"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="5"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv6"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="6"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv7"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="7"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv8"

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="8"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv9"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"

                android:gravity="center"
                android:text="9"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv0"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/bg_num_selector"
                android:clickable="true"
                android:gravity="center"

                android:text="0"
                android:textSize="@dimen/textsize_20"
                android:textStyle="bold" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"

                android:clickable="true"

                android:gravity="center"
                android:textSize="@dimen/textsize_20" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:clickable="true"

                android:gravity="center"

                android:textSize="@dimen/textsize_20" />


        </LinearLayout>

        <!--<TextView-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_margin="1dp"-->
        <!--android:layout_marginLeft="@dimen/margin_20"-->
        <!--android:background="@drawable/bg_num_selector"-->
        <!--android:gravity="center"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="0"-->
        <!--android:clickable="true"-->
        <!--android:textColor="@color/colorPurple"-->
        <!--android:textStyle="bold"-->
        <!--android:textSize="@dimen/textsize_20" />-->

        <Button
            android:id="@+id/btnNextStep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_50"
            android:layout_marginRight="@dimen/margin_50"
            android:layout_marginTop="@dimen/margin_20"
            android:background="@drawable/bg_btn_next_step"
            android:padding="@dimen/margin_10"
            android:text="Make a bet"
            android:textColor="@color/colorWhite" />
    </LinearLayout>
</ScrollView>